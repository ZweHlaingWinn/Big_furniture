<!DOCTYPE html>
<html>
  <head>
    <title>BigFurniture</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>




  <% if user_signed_in? %>
  <nav class="mb-1 navbar navbar-expand-lg navbar-dark default-color">
  <a class="navbar-brand" href="#">BIG</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-333"
    aria-controls="navbarSupportedContent-333" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent-333">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
      <%= link_to "Product", products_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Order Design", new_own_design_product_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Pricing</a>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">Own Design
        </a>
        <div class="dropdown-menu dropdown-default" aria-labelledby="navbarDropdownMenuLink-333">
        <%= link_to "Own Design Order list", own_design_products_path, class: "dropdown-item" %>
        <%= link_to "Own Design Order", new_own_design_product_path, class: "dropdown-item" %>
        
        </div>
      </li>
    </ul>
    <ul class="navbar-nav ml-auto nav-flex-icons">
    
      <li class="nav-item">
       <%= link_to  "", cart_path, class: "fas fa-shopping-cart nav-link waves-effect waves-light", style: "text-decoration:none;" %>
      </li>
    
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-333" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-user"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-right dropdown-default"
          aria-labelledby="navbarDropdownMenuLink-333">
          <%= link_to  "View Profiles", user_profile_path(current_user), class: "dropdown-item" %>
          <%= link_to  "Change Password", edit_profile_password_path(current_user), class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
           <%= link_to("<span class='glyphicon glyphicon-log-out'></span> Log Out".html_safe,
              destroy_user_session_path, 
              :method => :delete,
              :data => { :confirm => "Are you sure to Log Out?" }, class: "dropdown-item") %>               </div>
      </li>
    </ul>
  </div>
</nav>

 <%=yield%> 

  <%else%>

 

   <%=yield%>
  

  <%end%>  
  </body>
</html>
