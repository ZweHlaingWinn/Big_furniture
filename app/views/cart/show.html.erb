<div class="container">
  <div class="row">
    <div class="col-md-12 pt-5">
        <%= form_tag checkout_path do |f| %>
          <%= link_to "< Continue Shopping", root_path, class:"float-left" %>
          <%= submit_tag "Checkout Now!", class:"float-right btn btn-outline-primary" %>
        <%end%>
    </div>
    <div class="col-md-12 pt-3">
        <table class="table">
              <thead>
              <tr>
                <th style="font-size:25px;">My Cart </th>
                <th>Name</th>
                <th>Size</th>
                <th>Color</th>
                <th>Total</th>
                <th></th>
              </tr>
            </thead>
            <% for order_product in @cart.order_products %>
            <tr>
            <td><%= image_tag (order_product.product.image), class:"cart-product"%></td>
            <td><%= order_product.product.name %></td>
            <td><%= order_product.product.size %></td>
            <td><%= order_product.product.color %></td>
            <td><%= number_to_currency order_product.price %></td>
            <td><%= link_to "Remove", remove_from_cart_path(order_product), :method => :post %></td>
            </tr>
            <%end%>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td>Total:</td>
              <td><%= number_to_currency @cart.amount  %></td>
            <tr>
        </table>
        <%= form_tag checkout_path do |f| %>
          <%= submit_tag "Checkout Now!", class:"float-right btn btn-outline-primary" %>
        <%end%>
    </div>
  </div>
</div>