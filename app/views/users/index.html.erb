<%- model_class = User -%>

<div class="page-header">
  <h3> Users </h3>
</div>
<div style="margin-bottom: 10px;" class="text-right col-lg-12">
  <%= link_to "<span class='glyphicon glyphicon-plus' aria-hidden='true'></span> New User".html_safe, new_user_path , :class => "btn btn-sm btn-info" %>
</div>
<div class="clearfix"></div>
<div style="min-height:630px;">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="clearfix"></div>
      <div class="table-responsive">
        <table class="table table-striped table-hover" >
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Role</th>
              <th>Last Updated</th>
              <th>Option</th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= link_to user.name, user %></td>
              <td><%= user.email %></td>
             
               <td>
                <%
                unless user.user_id.nil?
                  user_name = User.find(user.user_id).name
                  %>
                  <%= user_name %>
                  <%
                end
                %>
              </td>
              <td>
                <%= link_to "Edit",
                edit_user_path(user), :class => 'btn btn-xs btn-primary' %>
                <%= link_to 'Edit Password', edit_password_path(user), :class => 'btn btn-xs btn-warning' %>
                <%= link_to "Delete",
                user,
                :method => :delete,
                :data => { :confirm => "Are you sure to Delete?" },
                :class => 'btn btn-xs btn-danger' %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
     
    </div>
  </div>
</div>

